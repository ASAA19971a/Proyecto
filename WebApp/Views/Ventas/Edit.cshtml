@using Modelo.Entidades

@model Venta 



@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1>Edición del Venta</h1>

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h3>
                Actualizar Venta de fecha: @Model.Fecha

            </h3>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-10">
            <form asp-action="Edit" method="post">
                <input type="text" asp-for="VentaId" hidden />

                <div class="form-group">
                    <label class="custom-control-label">Fecha: </label>
                    <input class="form-control" type="date" asp-for="Fecha" />
                </div>
                <div class="form-group">
                    <label class="custom-control-label">Estado: </label>
                    <input class="form-control" type="text" asp-for="Estado" />
                </div>
                <div class="form-group">

                    <label class="custom-control-label">Empleado: </label>

                    <input type="text" asp-for="EmpleadoId" hidden />

                </div>
                <div class="form-group">
                    <input class="btn btn-primary" type="submit" value="Actualizar Venta" />
                </div>
            </form>
        </div>
    </div>

</div>


