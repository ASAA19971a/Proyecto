@using Modelo.Entidades

@model Venta



@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1>Creacion del Venta</h1>

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h3>
                Nueva Venta
            </h3>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-10">
            <form asp-action="Create" method="post">
                <div class="form-group">
                    <label class="custom-control-label">Fecha: </label>
                    <input class="form-control" type="date" asp-for="Fecha" />
                </div>
                <div class="form-group">
                    <label class="custom-control-label">Estado: </label>
                    <select class="form-control"
                            asp-for="Estado" asp-items="Html.GetEnumSelectList<EstadoVenta>()">
                    </select>
                </div>
                
                    
                <div class="form-group">
                    <label class="custom-control-label">Empleado: </label>
                    <select class="form-control"
                            asp-for="EmpleadoId" asp-items="@ViewBag.selectListEmpleados">
                        <option value="">--Seleccione un empleado---</option>
                    </select>
                </div>
                
                <div class="form-group">
                    <input class="btn btn-primary" type="submit" value="Crear Venta" />
                </div>
            </form>
        </div>
    </div>

</div>


