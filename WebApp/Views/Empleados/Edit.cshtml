@using Modelo.Entidades
@model Empleado
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edición del Empleado</h1>

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h3>
                Actualizar Empleado: @Model.Nombre
            </h3>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-10">
            <form asp-action="Edit" method="post">
                <input type="text" asp-for="EmpleadoId" hidden />

                <div class="form-group">
                    <label class="custom-control-label">Nombre: </label>
                    <input class="form-control" type="text" asp-for="Nombre" />
                </div>
                <div class="form-group">
                    <label class="custom-control-label">Cédula: </label>
                    <input class="form-control" maxlength="10" type="text" asp-for="Cedula" />
                </div>
                <div class="form-group">
                    <label class="custom-control-label">Correo: </label>
                    <input class="form-control" type="email" asp-for="Correo" />
                </div>
                <div class="form-group">
                    <label class="custom-control-label">Celular: </label>
                    <input class="form-control" maxlength="10" type="text" asp-for="Celular" />
                </div>
                <div class="form-group">
                    <input class="btn btn-primary" type="submit" value="Actualizar Empleado" />
                </div>
            </form>
        </div>
    </div>

</div>

