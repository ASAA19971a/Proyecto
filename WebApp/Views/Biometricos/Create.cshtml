@using Modelo.Entidades

@model Biometrico
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Creacion de Biometrico</h1>

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h3>
                Nuevo Biometrico
            </h3>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-10">
            <form asp-action="Create" method="post">
                <div class="form-group">
                    <label class="custom-control-label">Hora Entrada: </label>
                    <input class="form-control" type="datetime-local" asp-for="Entrada" />
                </div>
                <div class="form-group">
                    <label class="custom-control-label">Hora Salida: </label>
                    <input class="form-control" type="datetime-local" asp-for="Salida" />
                </div>
                <div class="form-group">
                    <label class="custom-control-label">Fecha: </label>
                    <input class="form-control" type="date" asp-for="Fecha" />
                </div>
                <div class="form-group">
                    <label class="custom-control-label">Empleado: </label>
                    <select class="form-control"
                            asp-for="EmpleadoId" asp-items="@ViewBag.selectListEmpleados">
                        <option value="">--Seleccione un empleado---</option>
                    </select>
                </div>

                <div class="form-group">
                    <input class="btn btn-primary" type="submit" value="Crear Biometrico" />
                </div>
            </form>
        </div>
    </div>

</div>

