@using Modelo.Entidades

@model Biometrico
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edicion de Biometrico</h1>

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h3>
                Editar Biometrico
            </h3>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-10">
            <form asp-action="Edit" method="post">
                <input type="text" asp-for="BiometricoId" hidden />

                <div class="form-group">
                    <label class="custom-control-label">Fecha: </label>
                    <input class="form-control" type="datetime-local" asp-for="Entrada" />
                </div>
                <div class="form-group">
                    <label class="custom-control-label">Fecha: </label>
                    <input class="form-control" type="datetime-local" asp-for="Salida" />
                </div>
                <div class="form-group">
                    <label class="custom-control-label">Fecha: </label>
                    <input class="form-control" type="date" asp-for="Fecha" />
                </div>
                <input type="text" asp-for="EmpleadoId" hidden />

                <div class="form-group">
                    <input class="btn btn-primary" type="submit" value="Actualizar Biometrico" />
                </div>
            </form>
        </div>
    </div>

</div>

