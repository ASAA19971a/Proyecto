@using Modelo.Entidades
@model Capacitacion
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1>Edición de la capacitación</h1>

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h3>
                Actualizar Capacitación: @Model.Tema
            </h3>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-10">
            <form asp-action="Edit" method="post">
                <input type="text" asp-for="CapacitacionId" hidden />

                <div class="form-group">
                    <label class="custom-control-label">Tema: </label>
                    <input class="form-control" type="text" asp-for="Tema" />
                </div>
                <div class="form-group">
                    <label class="custom-control-label">Fecha: </label>
                    <input class="form-control" type="datetime-local" asp-for="Fecha" />
                </div>

                <div class="form-group">
                    <input class="btn btn-primary" type="submit" value="Actualizar Capacitación" />
                </div>
            </form>
        </div>
    </div>

</div>


