@using Modelo.Entidades
@model Capacitacion
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1>Creacion de la capacitación</h1>

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h3>
                Nueva Capacitación
            </h3>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-10">
            <form asp-action="Create" method="post">
                <div class="form-group">
                    <label class="custom-control-label">Tema: </label>
                    <input class="form-control" type="text" asp-for="Tema" />
                </div>
                <div class="form-group">
                    <label class="custom-control-label">Fecha: </label>
                    <input class="form-control"  type="datetime-local"  asp-for="Fecha" />
                </div>
                
                <div class="form-group">
                    <input class="btn btn-primary" type="submit" value="Crear Capacitación" />
                </div>
            </form>
        </div>
    </div>

</div>


