@using Modelo.Entidades
@model Evaluacion
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Creacion de Evaluacion</h1>

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h3>
                Nueva Evaluacion
            </h3>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-10">
            <form asp-action="Create" method="post">
                <div class="form-group">
                    <label class="custom-control-label">Fecha: </label>
                    <input class="form-control" type="datetime-local" asp-for="Fecha" />
                </div>
                <div class="form-group">
                    <label class="custom-control-label">Calificación: </label>
                    <select class="form-control"
                            asp-for="Calificacion" asp-items="Html.GetEnumSelectList<Calificacion>()">
                    </select>
                </div>
                
                <input class="form-control" type="hidden" value="17" asp-for="EmpleadoId" />
                

                <div class="form-group">
                    <input class="btn btn-primary" type="submit" value="Crear Evaluacion" />
                </div>
            </form>
        </div>
    </div>

</div>