@using Modelo.Entidades
@model Evaluacion
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Elimina de Evaluacion</h1>

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h3>
                Eliminar Evaluacion
            </h3>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-10">
            <form asp-action="Delete" method="post">

                <input type="text" asp-for="EvaluacionId" hidden />


                <div class="form-group">
                    <label class="custom-control-label">Fecha: </label>
                    <input class="form-control" type="datetime-local" asp-for="Fecha" disabled />
                </div>
                <div class="form-group">
                    <label class="custom-control-label">Calificación: </label>
                    <select class="form-control"
                            asp-for="Calificacion" asp-items="Html.GetEnumSelectList<Calificacion>()" disabled>
                    </select>
                </div>
                <input type="text" asp-for="EmpleadoId" hidden />



                <div class="form-group">
                    <input class="btn btn-primary" type="submit" value="Eliminar Evaluacion" />
                </div>
            </form>
        </div>
    </div>

</div>