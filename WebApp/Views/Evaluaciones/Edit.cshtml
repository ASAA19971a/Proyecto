@using Modelo.Entidades
@model Evaluacion
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Creacion de Evaluacion</h1>

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h3>
                Nueva Evaluacion
            </h3>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-10">
            <form asp-action="Edit" method="post">

                <input type="text" asp-for="EvaluacionId" hidden />


                <div class="form-group">
                    <label class="custom-control-label">Fecha: </label>
                    <input class="form-control" type="datetime-local" asp-for="Fecha" />
                </div>
                <div class="form-group">
                    <label class="custom-control-label">Calificación: </label>
                    <select class="form-control"
                            asp-for="Calificacion" asp-items="Html.GetEnumSelectList<Calificacion>()">
                    </select>
                </div>
                <div class="form-group">
                    <label class="custom-control-label">Empleado: </label>
                    <select class="form-control"
                            asp-for="EmpleadoId" asp-items="@ViewBag.selectListEmpleados">
                        <option value="">--Seleccione un empleado---</option>
                    </select>
                </div>


                <div class="form-group">
                    <input class="btn btn-primary" type="submit" value="Actualizar Evaluacion" />
                </div>
            </form>
        </div>
    </div>

</div>